<link rel="stylesheet" href="/css/common.css">

<h1><a href="/file/<%= file._id %>" id="back-button">‚Üê</a> Add Editors</h1>

<p>File: <%= file.title %></p>

<form method="POST" action="/file/<%= file._id %>/editors">
  <input type="email" name="email" placeholder="Editor Email" required />
  <button type="submit">Add Editor</button>
</form>

<p>Current editors:</p>
<ul>
  <% file.editors.forEach(email => { %>
    <li style="margin-bottom: 8px;">
      <%= email %>
      <form action="/file/<%= file._id %>/editors/delete" method="POST" style="display:inline;">
        <input type="hidden" name="email" value="<%= email %>" />
        <button type="submit" style="margin-left: 10px;">Remove</button>
      </form>
    </li>
  <% }) %>
</ul>

